<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.devMode" value="true"/>

    <package name="default" namespace="/" extends="struts-default">

        <interceptors>
            <interceptor-stack name="myValidationStack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="myValidationInterceptor"/>
                <interceptor-ref name="workflow"/>
            </interceptor-stack>
            <interceptor name="myValidationInterceptor" class="com.nixsolutions.bondarenko.study.interceptor.PasswordConfirmationInterceptor"/>
        </interceptors>

        <action name="login" class="com.nixsolutions.bondarenko.study.action.Login">
            <result name="input">/WEB-INF/pages/login.jsp</result>
            <!--<result name="success" type="redirectAction">home</result>-->
            <result name="success" type="redirectAction">admin</result>
        </action>

        <action name="home" class="com.nixsolutions.bondarenko.study.action.Home">
            <result name="success">/WEB-INF/pages/home.jsp</result>
        </action>

        <action name="register" class="com.nixsolutions.bondarenko.study.action.Register" method="input">
            <result name="input">/WEB-INF/pages/register.jsp</result>
        </action>

        <action name="registerUser" class="com.nixsolutions.bondarenko.study.action.Register" method="execute">
            <interceptor-ref name="myValidationStack"/>

            <result name="input">/WEB-INF/pages/register.jsp</result>
            <result name="success">/WEB-INF/pages/success.jsp</result>
        </action>

        <action name="admin" class="com.nixsolutions.bondarenko.study.action.Admin" method="execute">
            <result name="success">/WEB-INF/pages/admin.jsp</result>
        </action>

    </package>
</struts>
